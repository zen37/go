package main

import (
	"bufio"
	"fmt"
	"os"
	"strconv"
	"time"
)

func main() {

	start := time.Now()
	n, _ := strconv.Atoi(os.Args[1])
	w := bufio.NewWriter(os.Stdout)
	defer print(start)
	defer w.Flush()
	for i := 0; i < n; i++ {
		w.Write([]byte("hello world"))
	}
}

func print(start time.Time) {
	fmt.Println()
	fmt.Println(time.Since(start))
}
